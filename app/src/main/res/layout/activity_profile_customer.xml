<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Thoát"
        android:layout_marginBottom="16dp"/>

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ducdeptrai"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"/>

        <!-- Name and Phone Number -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6946_Trần Việt Đức"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Phone Number -->
            <TextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="( 0886542959"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <!-- Saved Locations Label -->
        <TextView
            android:id="@+id/tvSavedLocations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LỊCH SỬ ĐẶT "
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lvLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
</LinearLayout>
